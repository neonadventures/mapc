#!/bin/bash

##############################################
## HELP
##############################################
PROGRAM_NAME=$(basename $0)
if [ $# -lt 1 ]
  then
    echo "Usage: "
    echo "    $PROGRAM_NAME [output folder path] [bounds]"
    echo "Example: "
    echo "    $PROGRAM_NAME output -8.0042,31.6103,-7.9697,31.6459"
    echo "    cat bounds/marrakech.bounds | $PROGRAM_NAME output"
    exit
fi

##############################################
## INPUT PARAMETERS
##############################################

if [ $# -lt 2 ]
  then
    read BOUNDS
    OUTPUT_FILE=$1
fi

if [ $# -eq 2 ]
  then
    BOUNDS=$1
    OUTPUT_FILE=$2
fi

OSMFILE="map.osm"
OSMPATH="/tmp/$OSMFILE"

MINZOOM=14
MAXZOOM=18
DBNAME=osm
MBTILES_PROJECT="OSMBright"
MBTILES_PATH="test.mbtiles"

##############################################
## FUNCTIONS
##############################################

function download-map {
  url="http://api.openstreetmap.org/api/0.6/map?bbox=$1"
  wget -O $2 $url 2>&1
}

function download-osmbright {
  CWD=$(pwd)
  wget -O /tmp/osm-bright.zip https://github.com/mapbox/osm-bright/zipball/master
  unzip -o /tmp/osm-bright.zip -d /tmp
  rm /tmp/osm-bright.zip
  cp /tmp/mapbox-osm-bright-86bc63f/configure.py.sample /tmp/mapbox-osm-bright-86bc63f/configure.py
  cd /tmp/mapbox-osm-bright-86bc63f/

  wget http://tilemill-data.s3.amazonaws.com/osm/coastline-good.zip
  wget http://tilemill-data.s3.amazonaws.com/osm/shoreline_300.zip
  wget http://mapbox-geodata.s3.amazonaws.com/natural-earth-1.3.0/physical/10m-land.zip

  python make.py
  cd $CWD
}

function cleanup-osmbright {
  rm -rf /tmp/mapbox-osm-bright-86bc63f
}

function create-databases {
  dropdb $1
  createdb $1
  psql -d $1 -c 'create extension postgis;'
}

function import-map-to-psql {
  osm2pgsql -cGs -d $1 -S /usr/local/share/osm2pgsql/default.style $2
}

function cleanup-map {
  rm $1
}

function map-export {
  CWD=$(pwd)
  cd $(dirname $2)
  TILEMILL_PATH=~/Applications/TileMill.app/Contents/Resources
  $TILEMILL_PATH/node $TILEMILL_PATH/index.js export $1 $(basename $2) --bbox=$3 --format=mbtiles --minzoom=$4 --maxzoom=$5
  rm *.export
  rm *.export-failed
  cd $CWD
}

##############################################
## BEGIN PROGRAM
##############################################

create-databases osm
download-map $BOUNDS $OSMPATH
import-map-to-psql $DBNAME $OSMPATH
cleanup-map $OSMPATH
download-osmbright $MBTILES_PROJECT
map-export $MBTILES_PROJECT $OUTPUT_FILE $BOUNDS $MINZOOM $MAXZOOM
cleanup-osmbright
